<%- model_class = Wish -%>
<div class="page-header">
  <h1><%=t '.title', :default => Wish %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:link) %></dt>
      <dd><pre class="prettyprint"><%= @wish.link %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @wish.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:price_idea) %></dt>
      <dd><pre class="prettyprint"><%= @wish.price_idea %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              wishes_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_wish_path(@wish), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              wish_path(@wish),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

